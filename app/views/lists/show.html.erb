<h2><%= @list.name %></h2>

<div class="cards" >
  <% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %> //
  <%= bookmark.movie.overview %> //
  <%= bookmark.movie.rating %> //
  <%= bookmark.comment %>
  <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete that movie ?"}
  %>
  <% end %>
</div>

<p><%= link_to 'Add Movie to the List', new_list_bookmark_path(@list)%></p>
<p><%= link_to 'Back to the lists', lists_path%></p>


